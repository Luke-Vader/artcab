<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="8dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:layout_marginBottom="4dp"
    android:elevation="4dp"
    android:background="@drawable/user_background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/job_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/fontColorBlack"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/job_organisation"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/job_title"
        android:textColor="@color/fontColorBlack"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/job_location"
        android:layout_width="wrap_content"
        android:layout_below="@+id/job_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/job_organisation"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/job_description"
        android:layout_width="wrap_content"
        android:layout_below="@+id/job_organisation"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/days_ago"
        android:layout_below="@+id/job_description"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="8dp"
        android:id="@+id/posted_by"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/days_ago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>