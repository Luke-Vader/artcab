<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="158dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/network_profile_image"
        android:layout_marginStart="16dp"
        android:src="@drawable/user_dark_icon"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentStart="true"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/network_username"
        android:layout_toEndOf="@+id/network_profile_image"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:lines="2"
        android:textAlignment="center"
        android:textSize="21sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/network_quote"
        android:layout_below="@+id/network_profile_image"
        android:layout_marginTop="4dp"
        android:lines="2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>