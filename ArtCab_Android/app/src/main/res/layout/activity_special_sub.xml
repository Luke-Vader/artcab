<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SpecialSubActivity">

    <LinearLayout
        android:id="@+id/sub_spc_container"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Your\nSpecialisation Sub-Categories?"
            android:textSize="34sp"
            android:padding="8dp"
            android:textColor="@color/fontColorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sub_special_select"
            android:text="@string/choose"
            android:textColor="@color/fontColorWhite"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/goto_genre"
        android:text="@string/next"
        android:layout_marginTop="32dp"
        android:textColor="@color/fontColorWhite"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/sub_spc_container"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>