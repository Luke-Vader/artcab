<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".LinksActivity">

    <LinearLayout
        android:id="@+id/links_container"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Links of your Best Works"
            android:textSize="34sp"
            android:padding="8dp"
            android:textColor="@color/fontColorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/link_1"
            android:background="@color/fontColorWhite"
            android:textSize="24sp"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:hint="Link 1"
            android:maxLength="300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/link_2"
            android:background="@color/fontColorWhite"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:hint="Link 2"
            android:maxLength="300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/link_3"
            android:background="@color/fontColorWhite"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:maxLength="300"
            android:layout_width="match_parent"
            android:hint="Link 3"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/goto_password"
        android:text="@string/next"
        android:layout_marginTop="32dp"
        android:textColor="@color/fontColorWhite"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/links_container"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/skip_links"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/goto_password"
        android:text="@string/skip"
        android:layout_centerInParent="true"
        android:textColor="@color/fontColorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>